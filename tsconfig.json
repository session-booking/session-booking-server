{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts"]
}